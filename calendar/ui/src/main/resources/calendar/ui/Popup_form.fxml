 <VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" spacing="10" alignment="CENTER" fx:controller="calendar.ui.PopupController" stylesheets="@css/calendar.css">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Edit event">
                     <font>
                        <Font size="24.0" />
                     </font>
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </Text>
                  <TextField fx:id="eventNameField" promptText="Title" styleClass="input-text" />
                  <TextArea fx:id="eventDescriptionField" maxWidth="-Infinity" prefHeight="40.0" prefWidth="180.0" promptText="Description" styleClass="input-text" wrapText="true" />
                  <ToggleSwitch prefWidth="200.0" styleClass="toggle-button" text="All Day" />
                  <HBox alignment="CENTER_LEFT" depthTest="ENABLE" nodeOrientation="LEFT_TO_RIGHT" prefWidth="200.0" spacing="15.0">
                     <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Starts" wrappingWidth="30.0" HBox.hgrow="ALWAYS" />
                        <HBox prefWidth="150.0" spacing="5.0" HBox.hgrow="ALWAYS">
                           <children>
                              <DatePicker fx:id="startDateSelect" prefHeight="25.0" prefWidth="100.0" styleClass="inputdate" HBox.hgrow="ALWAYS" />
                              <TextField fx:id="startTimeSelect" alignment="CENTER" minWidth="45.0" prefHeight="25.0" prefWidth="45.0" styleClass="input-text" HBox.hgrow="ALWAYS" />
                           </children>
                        </HBox>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" depthTest="ENABLE" nodeOrientation="LEFT_TO_RIGHT" prefWidth="200.0" spacing="15.0">
                     <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Ends" wrappingWidth="30.0" HBox.hgrow="ALWAYS" />
                        <HBox prefHeight="25.0" prefWidth="137.0" spacing="5.0" HBox.hgrow="ALWAYS">
                           <children>
                              <DatePicker fx:id="endDateSelect" prefHeight="25.0" prefWidth="100.0" styleClass="inputdate" HBox.hgrow="ALWAYS" />
                              <TextField fx:id="endTimeSelect" alignment="CENTER" minWidth="45.0" prefHeight="25.0" prefWidth="45.0" styleClass="input-text" HBox.hgrow="ALWAYS" />
                           </children>
                        </HBox>
                     </children>
                  </HBox>
                  <Group>
                     <children>
                        <Text layoutY="2.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Color" wrappingWidth="30.0" />
                        <Circle fx:id="colorCircle" fill="#1f93ff" layoutX="170.0" layoutY="-2.0" onMouseClicked="#colorPicker" radius="10.0" stroke="BLACK" strokeType="INSIDE" styleClass="color-circle" />
                        <ColorPicker fx:id="colorPicker" layoutX="162.0" layoutY="-10.0" prefHeight="0.0" prefWidth="0.0" visible="false" />
                     </children>
                  </Group>
                  <HBox alignment="CENTER" spacing="5.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#handleDelete" prefWidth="1000.0" styleClass="button-default" text="Delete Event" HBox.hgrow="ALWAYS" />
                        <Button mnemonicParsing="false" onAction="#handleEdit" prefWidth="1000.0" styleClass="button-default" text="Edit Event" HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
               </padding>
            </VBox>